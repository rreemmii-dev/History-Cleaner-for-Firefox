{
    "manifest_version": 2,
    "name": "History Cleaner",
    "version": "1.0.0",
    "developer": {
        "name": "RREEMMII",
        "url": "https://github.com/rreemmii-dev/History-Cleaner-for-Firefox"
    },
    "description": "An extension to set a custom history retention and cache deletion period",

    "browser_specific_settings": {
        "gecko": {
            "id": "history-cleaner@rreemmii-dev"
        }
    },

    "browser_action": {
        "theme_icons": [{
            "light": "icons/icon_white_32.png",
            "dark": "icons/icon_black_32.png",
            "size": 32
        }],
        "default_title": "History Cleaner"
    },

    "icons": {
        "48": "icons/icon_48.png",
        "96": "icons/icon_96.png"
    },

    "options_ui": {
        "page": "options/options.html",
        "browser_style": true
    },

    "permissions": [
        "storage",
        "notifications",
        "browsingData",
        "history"
    ],

    "background": {
        "page": "background/background.html"
    }
}